<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Sales::sales">
                    <resource id="Magento_Sales::sales_operation">
                        <resource id="MageSuite_OrderExport::order_status" title="MageSuite OrderExport - Status" translate="title" sortOrder="200" />
                        <resource id="Magento_Sales::sales_order">
                            <resource id="Magento_Sales::actions">
                                <resource id="MageSuite_OrderExport::order_export_action" title="Order Export" translate="title" sortOrder="200" />
                            </resource>
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="MageSuite_OrderExport::config_orderexport" title="MageSuite OrderExport"/>
                        </resource>
                    </resource>
                </resource>
                <resource id="MageSuite_ErpConnector::general" title="Erp connectors" translate="title" sortOrder="30" >
                    <resource id="Magento_ImportExport::order_export_log" title="Orders Export Log" translate="title" sortOrder="30" />
                </resource>
            </resource>
        </resources>
    </acl>
</config>
